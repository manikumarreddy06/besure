<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bsure.TnC.TnC_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="15dp"
            android:text="@string/terms_amp_conditions"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:scrollbarSize="6dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/ll_tnc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="25dp"
            android:orientation="vertical">

            <TextView
                style="@style/TnC_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@string/tnc_desc" />


            <TextView
                style="@style/TnC_TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eligibility" />

            <TextView
                style="@style/TnC_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tnc_eligibility" />

            <TextView
                style="@style/TnC_TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Definations" />

            <TextView
                style="@style/TnC_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tnc_desc1" />

            <TextView
                style="@style/TnC_TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Your Use of Bsure.live" />

            <TextView
                style="@style/TnC_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tnc_desc2" />

            <TextView
                style="@style/TnC_TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Supplemental Terms and delivery of services through Bsure.live Group Entities" />

            <TextView
                style="@style/TnC_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tnc_desc3" />

            <TextView
                style="@style/TnC_TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Violation of Terms of Use / Suspicious Activity" />

            <TextView
                style="@style/TnC_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tnc_desc4" />

            <TextView
                style="@style/TnC_TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Termination / Deletion of Your Account" />

            <TextView
                style="@style/TnC_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tnc_desc5" />

            <TextView
                style="@style/TnC_TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Fees" />

            <TextView
                style="@style/TnC_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tnc_desc6" />

            <TextView
                style="@style/TnC_TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Privacy" />

            <TextView
                style="@style/TnC_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tnc_desc7" />

            <TextView
