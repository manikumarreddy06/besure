        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="10dp"
            android:background="#031F2B"
            app:cardCornerRadius="20dp"
            app:cardElevation="50dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Insurances"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llvehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginBottom="10dp"
                                android:elevation="5dp"
                                android:src="@drawable/ic_car_insurance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif"
                                android:text="Vehicle"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="italic|bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llhealth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginBottom="10dp"
                                android:elevation="5dp"
                                android:src="@drawable/ic_health_insurance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif"
                                android:text="Health"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="italic|bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llhome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginBottom="10dp"
                                android:elevation="5dp"
                                android:src="@drawable/ic_home_insurance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Home"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="italic|bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lllife"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginBottom="10dp"
                                android:elevation="5dp"
                                android:src="@drawable/ic_life_insurance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif"
                                android:text="Life"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="italic|bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lltravel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginBottom="10dp"
                                android:elevation="5dp"
                                android:src="@drawable/ic_travel_insurance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Travel"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="italic|bold" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
