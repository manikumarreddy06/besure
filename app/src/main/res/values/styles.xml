<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:fontFamily">@font/allerta</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" >
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:backgroundTint">@color/white</item>

    </style>
    <style name="Darktheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" >
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="background_color">#131313</item>-->
<!--        &lt;!&ndash;     Our app's background changes to black when dark mode is activated &ndash;&gt;-->
<!--        <item name="text_color">#ffff</item>-->
<!--        &lt;!&ndash;     text and button color change to white to contrast with the app's background&ndash;&gt;-->
<!--        <item name="button_color">#ffff</item>-->

    </style>
    <style name="Title" parent="ThemeOverlay.AppCompat.DayNight" >
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Description" parent="ThemeOverlay.AppCompat.DayNight" >
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:paddingStart">20dp</item>
    </style>
    <style name="TnC_Description" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginVertical">2dp</item>
    </style>
    <style name="TnC_TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>
    <style name="subTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>
    <style name="main_activity_text" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">20dp</item>
    </style>
    <style name="card_textElements" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
    </style>

    <style name="button" parent="android:style/Widget.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_button_rounded</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>
<!--<darkmode enabled></darkmode>-->

</resources>