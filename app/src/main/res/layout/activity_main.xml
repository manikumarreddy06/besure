    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topappbar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:backgroundTint="@color/colorPrimary"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:menu="@menu/mutualfunds_appbar"
                app:title="Besure" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="10dp"
            android:background="#031F2B"
            app:cardCornerRadius="20dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Features"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_gravity="center"
                            android:elevation="5dp"
                            android:src="@drawable/ic_bank_account" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:text="Accounts"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="italic|bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll2"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_gravity="center"
                            android:elevation="5dp"
                            android:src="@drawable/ic_nominee" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:text="Nominees"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="italic|bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll3"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_gravity="center"
                            android:elevation="5dp"
                            android:src="@drawable/ic_mutual_fund" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:text="Nodging"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="italic|bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll4"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_gravity="center"
                            android:elevation="5dp"
                            android:src="@drawable/ic_stock"
                            android:contentDescription="Asset Distribution" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:text="Asset Distribution"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="italic|bold" />

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
