<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Nudgesuccess_Activity"
    android:background="@drawable/nudgescrn_bg">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/nudge_anim"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:lottie_rawRes="@raw/nudge_anim"
        app:lottie_repeatCount="@integer/material_motion_duration_long_1"
        app:lottie_repeatMode="restart"
        android:layout_gravity="center_horizontal||center_vertical"
        android:layout_marginTop="80dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp">


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="22sp"
               android:textAlignment="center"
               android:text="Welcome !"
               android:layout_marginTop="10dp"
               android:textStyle="bold"
               android:textColor="@color/black"
               />
           <TextView

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="22sp"
               android:textAlignment="center"
               android:text="Your nudge plan was activated successfully"
               android:layout_marginTop="10dp"
               android:textStyle="bold"
               android:textColor="@color/black"
               />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="we will nudge your well-being from time to time"
               android:textAlignment="center"
               android:textSize="23sp"
               android:layout_marginTop="25dp"
               android:textColor="@color/black"
               android:layout_margin="10dp"
               android:textStyle="bold"
               />
           <Button
               android:id="@+id/btndone_nudge"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginVertical="20dp"
               android:layout_marginHorizontal="10dp"
               android:background="@drawable/shape_button_rounded"
               android:foreground="?attr/selectableItemBackground"
               android:gravity="center"
               android:paddingVertical="@dimen/btn_paddingTopBottom"
               android:text="Done"
               android:textColor="@android:color/white"
               android:fontFamily="@font/allerta"
               android:textSize="@dimen/btn_text_size"
               app:backgroundTint="@color/colorPrimary" />

       </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>