<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topappbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/colorPrimary"
            app:menu="@menu/asset_distribution"
            app:title="Bsure"
            app:titleTextColor="@color/white"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            app:titleTextAppearance="@style/Toolbar.TitleText" />
    </com.google.android.material.appbar.AppBarLayout>

<!--    <com.airbnb.lottie.LottieAnimationView-->
<!--        android:id="@+id/animationView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:lottie_rawRes="@raw/animation"-->
<!--        app:lottie_autoPlay="true"-->
<!--        app:lottie_loop="true"/>-->

    <androidx.cardview.widget.CardView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:background="@drawable/white_border_shape_button_rounded"
        tools:context=".Bank_ResultActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal">
                <TextView
                    android:textSize="17sp"
                    android:fontFamily="@font/allerta"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text_color"
                    android:id="@+id/bankname"
                    android:text="@string/bank_name"
                    />
                <TextView
                    style="@style/Description"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.55"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="State bank of India"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/bankAccNum"
                    android:text="@string/account_number"
                    android:textSize="17sp"
                    android:fontFamily="@font/allerta"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text_color" />
                <TextView
                    style="@style/Description"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.55"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="12xxxxxxxx"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/IFSCcode"
                    android:text="@string/ifsc_code"
                    android:textSize="17sp"
                    android:fontFamily="@font/allerta"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text_color" />
                <TextView
                    style="@style/Description"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.55"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="ABCN0xxxx"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/branchname"
                    android:text="@string/branch_name"
                    android:textSize="17sp"
                    android:fontFamily="@font/allerta"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text_color" />
                <TextView
                    style="@style/Description"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.55"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="XYZ"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nominees"
                    android:text="Nominee:"
                    android:textSize="17sp"
                    android:fontFamily="@font/allerta"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text_color"/>

                <!--            <LinearLayout-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:orientation="vertical">-->

                <!--            </LinearLayout>-->
                <TextView
                    style="@style/Description"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.55"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="+Add Details"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <!--        <Button-->
            <!--            android:id="@+id/btn_copyToAll"-->
            <!--            android:text="Copy To all"-->
            <!--            android:layout_width="150dp"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginTop="10dp"-->
            <!--            android:layout_marginHorizontal="30dp"-->
            <!--            android:layout_gravity="end"-->
            <!--            />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_copyTl"
                    android:text="Edit"
                    android:paddingHorizontal="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    style="?android:attr/buttonBarButtonStyle" />
                <Button
                    android:id="@+id/btn_copyl"
                    android:text="Save"
                    android:paddingHorizontal="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="?android:attr/buttonBarButtonStyle" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>