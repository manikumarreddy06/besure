<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentExtraCost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="40dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/margin_8dp"
    android:fontFamily="@font/robotoregular"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/margin_8dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/robotoregular"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:text="Comments" />


    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/spStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:smsp_selectedItemListColor="@color/colorPrimary"
        app:smsp_isSearchable="true"
        android:fontFamily="@font/robotoregular"
        app:smsp_enableFloatingLabel="true"
        app:smsp_enableErrorLabel="false"/>

    <LinearLayout
        android:id="@+id/containerOthers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:orientation="vertical"
        android:fontFamily="@font/robotoregular"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/margin_4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvOthers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:fontFamily="@font/robotoregular"
            android:text="Others"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/size_14sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:background="@drawable/shape_outline_rect_gray"
            android:focusedByDefault="false"
            android:hint="Enter text here"
            android:imeOptions="actionGo"
            android:fontFamily="@font/robotoregular"
            android:inputType="text"
            android:maxLines="1"
            android:minHeight="40dp"
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/primary_text_color"
            android:textSize="@dimen/size_14sp" />
    </LinearLayout>


</LinearLayout>