<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:fontFamily">@font/allerta</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="Title" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Description" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingStart">20dp</item>
    </style>
    <style name="TnC_Description" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TnC_TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:paddingStart">20dp</item>
    </style>
    <style name="main_activity_text" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">20dp</item>
    </style>
    <style name="card_textElements" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
    </style>
</resources>